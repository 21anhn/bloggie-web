@page
@model Bloggie.Web.Pages.LoginModel
@{
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <partial name="_Notification" />

            <h1 class="mb-3 h3">Login</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input class="form-control" type="text" asp-for="LoginViewModel.Username"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" type="password" asp-for="LoginViewModel.Password"/>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn bg-dark text-light">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>